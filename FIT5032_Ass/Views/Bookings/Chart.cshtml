<!--Source: This chart is using the Google chart from https://developers.google.com/chart/interactive/docs/gallery/barchart-->

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script scr="Scripts/jquery-3.4.1.js"></script>
<script type="text/javascript">
    google.charts.load("current", { packages: ["corechart"] });
    google.charts.setOnLoadCallback(drawChart);
    function drawChart() {
        var data = google.visualization.arrayToDataTable([
            ["Bookings", "Score", { role: "style" }],
            ["Booking101", 4.5, 'opacity: 0.7'],
            ["Booking102", 4, 'opacity: 0.7'],
            ["Booking103", 5, 'opacity: 0.7'],
            ["Booking104", 1, 'opacity: 0.7']
        ]);

        var view = new google.visualization.DataView(data);
        view.setColumns([0, 1,
            {
                calc: "stringify",
                sourceColumn: 1,
                type: "string",
                role: "annotation"
            },
            2]);

        var options = {
            title: "Interactive Bar chart",
            width: 600,
            height: 400,
            bar: { groupWidth: "95%" },
            legend: { position: "none" },
        };
        var chart = new google.visualization.BarChart(document.getElementById("barchart_values"));
        chart.draw(view, options);
    }
</script>
<div id="barchart_values" style="width: 900px; height: 300px;"></div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
